{
    "watch": [
        "src"
    ],
    "ignore": [
        ".git",
        "tmp/**/*",
        "node_modules/**/node_modules"
    ],
    "execMap": {
        "ts": "node -r tsconfig-paths/register -r ts-node/register/transpile-only --inspect=0.0.0.0:9228 src/main.ts"
    },
    "signal": "SIGINT"
}