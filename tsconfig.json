{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
        "@models/*": ["src/models/*"]
    },
    "typeRoots": [
        "./typings",
        "./node_modules/@types"
    ]
  },
  "include": ["./src", "./typings"],
  "exclude": ["node_modules", "dist"]
}
